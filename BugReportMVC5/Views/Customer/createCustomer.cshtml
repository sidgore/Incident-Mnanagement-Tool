@model BugReportMVC5.Models.Customer 

@{
ViewData["Title"]="Create a Customer";
Layout = "_adminDashboardLayout"; }  

        
        <div style="margin-left:2%;font-family: OmnesATTII;" >
    <h3>
        
         <img src="~/img/admin/company1.svg"/>  <span style="color: #545b70; font-weight: bold;font-family: OmnesATTII;font-size: 20px;">Create a Customer </span>    
    </h3>
</div>   
 <div class="outer-add-customer" style="margin-left:2%;padding:1%;width:96%;font-family: OmnesATTII;">   
         
    <form role="form" class="w3-container " method="post" asp-controller="Customer" asp-action="createCustomer1">
   
            <label style="float: left;padding-top: 1%;font-size: 16px;width:12%;color: #7f8fa4;font-family: OmnesATTII;font-weight: 500;">Customer Name</label>
             <input  class="w3-input w3-border w3-round" style="float:left;width: 79%;height: 80%;margin-left: .5%" asp-for="Customer_name" required=""  />  
       
            <input type="submit" value="Create" class="w3-button  w3-round" style="float: right;margin-left: 1%; height: 80%;background-image: linear-gradient(to bottom, #39b54a, #33aa44);color: #ffffff;width:7%;" />     

    </form>
      
</div> 
<div style="margin-top:8px;margin-right:2%;">    
      <a class="w3-button w3-blue w3-round" style="float:right;background-color: #27a2ff;color: #ffffff;font-family: OmnesATTII;" asp-action="Index"> <img src="~/img/back.svg" style="float:left;"/> <span style="margin-left:4px;">Back to List</span></a> 
</div>
   
              
    
                         
                     
                    

                      
                    






